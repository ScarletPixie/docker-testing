CREATE DATABASE IF NOT EXISTS wordpress;
ALTER USER 'root'@'localhost' identified by '$MYSQL_ROOT_PASSWORD';
CREATE USER IF NOT EXISTS '$MYSQL_USER'@'inception_wordpress' identified by '$MYSQL_PASSWORD';
grant all privileges on wordpress.* to '$MYSQL_USER'@'inception_wordpress' with grant option;
flush privileges;
EXIT;

sed -i "s/\$MYSQL_ROOT_PASSWORD/${MYSQL_ROOT_PASSWORD}/g" /root/conf.sql
sed -i "s/\$MYSQL_USER/${MYSQL_USER}/g" /root/conf.sql
sed -i "s/\$MYSQL_PASSWORD/${MYSQL_PASSWORD}/g" /root/conf.sql